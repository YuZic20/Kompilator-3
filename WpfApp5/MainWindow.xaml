<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Silver">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <TextBox AcceptsReturn="True" Name="TextBlock" Background="White" Margin="5 5 5 5" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Input" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.Row="0" />
        <TextBlock Name="Output" Background="White" Margin="5 5 5 5" HorizontalAlignment="Stretch" Grid.Row="2" TextWrapping="Wrap" Text="Output" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Visible"/>
        <Button Background="White"  Content="Run" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Name="Run" Click="Run_Click"/>
    </Grid>
</Window>
